services:
  kotaemon:
    image: ghcr.io/dataforgoodfr/13_democratiser_sobriete:latest
    entrypoint: [ "/bin/bash", "/app/launch.sh" ]
    volumes:
      - /opt/wsl-/data/ktem_app_data:/app/ktem_app_data
    environment:
      GRADIO_SERVER_NAME: 0.0.0.0
      GRADIO_SERVER_PORT: 8080
      OLLAMA_DEPLOYMENT: docker
    depends_on:
      - ollama
    deploy:
      replicas: {{ replicas }}
      placement:
        constraints:
          - node.hostname == {{ deploy_on }}

  ollama:
    image: ollama/ollama
    container_name: ollama
    ports:
      - '11434:11434'
    deploy:
      replicas: {{ replicas }}
      placement:
        constraints:
          - node.hostname == {{ deploy_on }}

networks:
  d4g-internal:
    external: true
