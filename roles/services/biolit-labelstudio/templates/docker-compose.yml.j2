services:
  app:
    image: heartexlabs/label-studio:latest
    volumes:
      - /opt/biolit-labelstudio/biolit.env:/label-studio/data/.env
    networks:
      - d4g-internal
    deploy:
      replicas: {{ replicas }}
      placement:
        constraints:
          - node.hostname == {{ deploy_on }}

networks:
  d4g-internal:
    external: true
