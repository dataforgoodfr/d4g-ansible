version: "3.8"

services:
  # VictoriaMetrics - Time series database
  victoria-metrics:
    image: victoriametrics/victoria-metrics:latest
    command:
      - '--storageDataPath=/victoria-metrics-data'
      - '--retentionPeriod=180d'
      - '--httpListenAddr=:8428'
      - '--promscrape.config=/etc/victoria-metrics/scrape.yml'
      - '--promscrape.configCheckInterval=60s'
    volumes:
      - /opt/observability/data/victoria:/victoria-metrics-data
      - /opt/observability/config/victoria-scrape.yml:/etc/victoria-metrics/scrape.yml:ro
      - /opt/observability/config/node-exporters.json:/etc/victoria-metrics/node-exporters.json:ro
    networks:
      - d4g-internal
    deploy:
      mode: replicated
      replicas: 1
      placement:
        constraints:
          - node.hostname == {{ groups[group_name] | map('extract', hostvars) | selectattr('is_swarm_leader', 'defined') | selectattr('is_swarm_leader', 'equalto', true) | map(attribute='inventory_hostname') | list | first }}
      resources:
        limits:
          memory: 4G
          cpus: '2.0'
        reservations:
          memory: 2G

  # vmalert - Recording and alerting rules
  vmalert:
    image: victoriametrics/vmalert:latest
    command:
      - '--datasource.url=http://victoria-metrics:8428'
      - '--remoteWrite.url=http://victoria-metrics:8428'
      - '--remoteRead.url=http://victoria-metrics:8428'
      - '--rule=/etc/vmalert/rules/*.yml'
      - '--httpListenAddr=:8880'
      - '--evaluationInterval=1m'
    volumes:
      - /opt/observability/config/vmalert-rules:/etc/vmalert/rules:ro
    networks:
      - d4g-internal
    depends_on:
      - victoria-metrics
    deploy:
      mode: replicated
      replicas: 1
      placement:
        constraints:
          - node.role == manager
      resources:
        limits:
          memory: 256M
        reservations:
          memory: 128M

  # OpenTelemetry Collector - Metrics aggregation
  otel-collector:
    image: otel/opentelemetry-collector-contrib:latest
    command: ["--config=/etc/otel-collector/config.yml"]
    volumes:
      - /opt/observability/config/otel-collector-config.yml:/etc/otel-collector/config.yml:ro
    networks:
      d4g-internal:
        aliases:
          - otel-collector
    deploy:
      mode: replicated
      replicas: 2
      placement:
        max_replicas_per_node: 1
      resources:
        limits:
          memory: 512M
          cpus: '1.0'
        reservations:
          memory: 256M

  # Grafana - Visualization and dashboards
  grafana:
    image: grafana/grafana:latest
    environment:
      - GF_SECURITY_ADMIN_PASSWORD={{ lookup("env", "GRAFANA_ADMIN_PASSWORD") }}
      - GF_USERS_ALLOW_SIGN_UP=false
      - GF_AUTH_ANONYMOUS_ENABLED=false
      - GF_PATHS_PROVISIONING=/etc/grafana/provisioning
    volumes:
      - /opt/observability/data/grafana:/var/lib/grafana
      - /opt/observability/config/grafana/provisioning:/etc/grafana/provisioning:ro
      - /opt/observability/config/grafana/dashboards:/etc/grafana/dashboards:ro
    networks:
      - d4g-internal
    depends_on:
      - victoria-metrics
    deploy:
      mode: replicated
      replicas: 1
      placement:
        constraints:
          - node.role == manager
      resources:
        limits:
          memory: 1G
          cpus: '0.5'
        reservations:
          memory: 512M

  # Node Exporter - System metrics collection
  node-exporter:
    image: prom/node-exporter:latest
    command:
      - '--path.procfs=/host/proc'
      - '--path.sysfs=/host/sys'
      - '--path.rootfs=/rootfs'
      - '--collector.filesystem.mount-points-exclude=^/(sys|proc|dev|host|etc)($$|/)'
      - '--collector.textfile.directory=/textfile-collector'
    volumes:
      - /proc:/host/proc:ro
      - /sys:/host/sys:ro
      - /:/rootfs:ro
      - /opt/observability/data/node-exporter-textfile:/textfile-collector:ro
    networks:
      - d4g-internal
    deploy:
      mode: global
      resources:
        limits:
          memory: 128M

  postgres-exporter:
    image: prometheuscommunity/postgres-exporter:latest
    environment:
      - DATA_SOURCE_NAME=postgresql://{{ lookup('env', 'MONITORING_DB_USER') }}:{{ lookup('env', 'MONITORING_DB_PASSWORD') }}@{{ lookup('env', 'POLETECH_DB_HOST') }}:{{ lookup('env', 'POLETECH_DB_PORT') }}/postgres?sslmode=require
    networks:
      - d4g-internal
    deploy:
      replicas: 1
      resources:
        limits:
          memory: 128M
          cpus: '0.1'

  # Loki - Log aggregation system
  loki:
    image: grafana/loki:latest
    command:
      - '-config.file=/etc/loki/config.yml'
    volumes:
      - /opt/observability/config/loki-config.yml:/etc/loki/config.yml:ro
      - /opt/observability/data/loki:/loki
    environment:
      - AWS_ACCESS_KEY_ID={{ lookup('env', 'BACKUPS_S3_ACCESS_KEY') }}
      - AWS_SECRET_ACCESS_KEY={{ lookup('env', 'BACKUPS_S3_SECRET_KEY') }}
    networks:
      - d4g-internal
    deploy:
      mode: replicated
      replicas: 1
      placement:
        constraints:
          - node.hostname == {{ groups[group_name] | map('extract', hostvars) | selectattr('is_swarm_leader', 'defined') | selectattr('is_swarm_leader', 'equalto', true) | map(attribute='inventory_hostname') | list | first }}
      resources:
        limits:
          memory: 2G
          cpus: '1.0'
        reservations:
          memory: 1G

  # Promtail - Log collector agent
  promtail:
    image: grafana/promtail:latest
    command:
      - '-config.file=/etc/promtail/config.yml'
    volumes:
      - /opt/observability/config/promtail-config.yml:/etc/promtail/config.yml:ro
      - /opt/observability/data/promtail:/promtail
      - /var/lib/docker/containers:/var/lib/docker/containers:ro
      - /var/run/docker.sock:/var/run/docker.sock:ro
      - /var/log/journal:/var/log/journal:ro
      - /run/log/journal:/run/log/journal:ro
      - /etc/machine-id:/etc/machine-id:ro
    networks:
      - d4g-internal
    deploy:
      mode: global
      resources:
        limits:
          memory: 256M
          cpus: '0.5'
        reservations:
          memory: 128M

networks:
  d4g-internal:
    external: true
