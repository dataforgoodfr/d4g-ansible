# Slack Configuration
# Get your token from https://api.slack.com/apps
# Required scopes: channels:history, channels:read, groups:history, groups:read, users:read
SLACK_TOKEN={{ lookup('env', 'CHAT_EXPORTER_SLACK_TOKEN') }}

# Mattermost Configuration
# Base URL of your Mattermost instance (without trailing slash)
MATTERMOST_URL=https://mattermost.services.dataforgood.fr
# Personal access token or bot token
MATTERMOST_TOKEN={{ lookup('env', 'CHAT_EXPORTER_MM_TOKEN') }}

# HTTP Server Configuration
# Port to expose on host (default: 9090)
LISTEN_PORT=9090
# Internal listen address (usually :9090)
LISTEN_ADDRESS=:9090
# Metrics endpoint path (default: /metrics)
METRICS_PATH=/metrics

# Collection Configuration
# How often to collect and update metrics (in seconds)
REFRESH_INTERVAL_SECONDS=600

# How far back to look for activity metrics (in hours)
LOOKBACK_HOURS=24
