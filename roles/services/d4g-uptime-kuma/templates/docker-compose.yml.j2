services:
  d4g-uptime-kuma:
    image: louislam/uptime-kuma
    container_name: "d4g-uptime-kuma"
    environment:
      - NODE_ENV=production
      - UPTIME_KUMA_HOST=0.0.0.0
      - UPTIME_KUMA_PORT=8080
    volumes:
      - ./data:/app/data
    networks:
      - d4g-internal
    restart: unless-stopped

networks:
  d4g-internal:
    external: true
